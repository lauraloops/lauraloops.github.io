<section id="home" class="hero">
  <div class="container hero-content">
    <div class="text-content">
      <span class="subtitle">Bioinformatics Student</span>
      <h1>Laura Llorente</h1>
      <p class="role">Undergraduate Bioinformatics, Data Management & Analytics Intern</p>
      <p class="description">
        Exploring the intersection of biology and data science to solve complex problems.
      </p>
      <div class="cta-buttons">
        <a href="#projects" class="btn">View Projects</a>
        <a href="#contact" class="btn btn-outline">Contact Me</a>
      </div>
    </div>
    
    <div class="visual-content">
      <div class="photo-wrapper">
        <!-- Placeholder for Laura's photo -->
        <div class="photo-placeholder">
          <span>Photo</span>
        </div>
      </div>
      
      <div class="dna-wrapper">
        <!-- Placeholder for 3D DNA Model -->
        <div class="dna-placeholder">
          <span>3D DNA Model Loading...</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 80px; /* Account for fixed navbar */
    background: linear-gradient(135deg, #f8f9fa 0%, #e3f2fd 100%);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .subtitle {
    color: var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 0.9rem;
    display: block;
    margin-bottom: 1rem;
  }

  .role {
    font-size: 1.25rem;
    color: var(--color-text);
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: 1.1rem;
    max-width: 500px;
    margin-bottom: 2.5rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
  }

  .btn-outline {
    background: transparent;
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
  }

  .btn-outline:hover {
    background: var(--color-primary);
    color: white;
  }

  .visual-content {
    position: relative;
    height: 500px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .photo-wrapper {
    position: relative;
    z-index: 2;
    width: 350px;
    height: 350px;
    border-radius: 50%;
    overflow: hidden;
    border: 8px solid white;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }

  .photo-placeholder {
    width: 100%;
    height: 100%;
    background: #dfe6e9;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #636e72;
    font-weight: 600;
  }

  .dna-wrapper {
    position: absolute;
    top: 50%;
    right: -50px;
    transform: translateY(-50%);
    width: 300px;
    height: 600px;
    z-index: 1;
    opacity: 0.6;
  }

  .dna-placeholder {
    width: 100%;
    height: 100%;
    border: 2px dashed var(--color-secondary);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.5);
    color: var(--color-secondary);
  }

  @media (max-width: 968px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 3rem;
    }

    .description {
      margin: 0 auto 2.5rem;
    }

    .cta-buttons {
      justify-content: center;
    }

    .visual-content {
      height: 400px;
    }

    .dna-wrapper {
      right: 50%;
      transform: translate(50%, -50%);
    }
  }
</style>
